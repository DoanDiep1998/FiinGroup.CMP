@{
    ViewData["Title"] = "Home Page";
}
<style>
    .consent-container{
        background: #fff;
        border-radius: 8px;
        border: 1px solid #e5e7eb;
    }

</style>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <button class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#cmpModal">
        Quản lý quyền riêng tư
    </button>

    <div class="modal fade" id="cmpModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Tùy chỉnh Consent</h5>
                    <button type="button" class="close" data-bs-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body p-0" style="height:80vh;">
                    <iframe src="https://localhost:7127/CMPClient/FrameContent?productcode=FIINX&parentOrigin=https://localhost:7127/&lang=en"
                            style="width:100%;height:100%;border:none;">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>

